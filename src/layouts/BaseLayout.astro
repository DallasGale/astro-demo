---


// src/layouts/BaseLayout.astro
const {title} = Astro.props;
import Header from "../components/react/header/index.tsx";
import NewYorker from "../../public/assets/new-yorker.svg";

const logo = {
  src: NewYorker,
  alt: "The New Yorker"
}

 const {modifier}  = Astro.props;
---
<html>
<head>
   <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>Example Layout: {title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/style/index.css">
    <!-- <link rel="stylesheet" href="/style/home.css"> -->
    
  </head>
  <body>
    <!-- <GridOverlay /> -->
    <!-- Adds a navigation bar to every page. -->
    <Header client:idle logo={logo} />

    <div class={`page-content ${modifier}`}>
      <!-- slot: your page content will be injected here. -->
      <slot />
    </div>
  </body>
</html>